CREATE VIEW  view_empresas_registro AS SELECT  empresa_usuarios.activo, id, fecha, empresa_usuarios.idempresa, empresa, empresa_registro.idcategoria, categoria, empresa_registro.idestado, rfc, CONCAT(calle, '  No.', numero, ' Col.)', colonia) As domicilio FROM empresa_registro INNER JOIN empresa_usuarios ON empresa_usuarios.idempresa=empresa_registro.idempresa  INNER JOIN catalogo_categorias ON catalogo_categorias.idcategoria=empresa_registro.idcategoria INNER JOIN catalogo_estados  ON catalogo_estados.idestado=empresa_registro.idestado